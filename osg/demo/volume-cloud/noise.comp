	//return fract((p3.xxy + p3.yzz) * p3.zyx) - 0.5;
}

const float F3 = 0.3333333;
const float G3 = 0.1666667;

float simplex3d(vec3 p)
{
	vec3 s = floor(p + dot(p, vec3(F3)));
	vec3 x = p - s + dot(s, vec3(G3));

	vec3 e = step(vec3(0.0), x - x.yzx);
	vec3 i1 = e * (1.0 - e.zxy);
	vec3 i2 = 1.0 - e.zxy * (1.0 - e);

	vec3 x1 = x - i1 + G3;
	vec3 x2 = x - i2 + 2.0 * G3;
	vec3 x3 = x - 1.0 + 3.0 * G3;

	vec4 w, d;

	w.x = dot(x, x);
	w.y = dot(x1, x1);
	w.z = dot(x2, x2);
	w.w = dot(x3, x3);

	w = max(0.6 - w, 0.0);

	d.x = dot(random3(s), x);
	d.y = dot(random3(s + i1), x1);
	d.z = dot(random3(s + i2), x2);
	d.w = dot(random3(s + 1.0), x3);

	w *= w;
	w *= w;
	d *= w;

	return dot(d, vec4(52.0));
}

const mat3 rot1 = mat3(-0.37, 0.36, 0.85, -0.14, -0.93, 0.34, 0.92, 0.01, 0.4);
const mat3 rot2 = mat3(-0.55, -0.39, 0.74, 0.33, -0.91, -0.24, 0.77, 0.12, 0.63);
const mat3 rot3 = mat3(-0.71, 0.52, -0.47, -0.08, -0.72, -0.68, -0.7, -0.45, 0.56);

float simplex3d_fbm(vec3 m)
{
	return abs(simplex3d(m))
		+ 0.5 * abs(simplex3d(2.0 * m))
		+ 0.25 * abs(simplex3d(4.0 * m))
		+ 0.125 * abs(simplex3d(8.0 * m));
}

void main()
{
	ivec3 pos = ivec3(gl_GlobalInvocationID.xyz);
	vec3 px = vec3(gl_GlobalInvocationID.xyz) / vec3(64.0, 64.0, 128.0);
	float value = simplex3d_fbm(px) * 0.5 + 0.5;
	imageStore(noiseTex, pos, vec4(value, 0, 0, 0));
}
