#version 450

layout(r32f, binding = 0) uniform image3D noiseTex;
layout(local_size_x = 16, local_size_y = 16, local_size_z = 4) in;

vec3 random3(vec3 p)
{
	float j = 4096.0 * sin(dot(p, vec3(17.0, 59.4, 15.0)));
	vec3 r;
	r.z = fract(1024.0 * j);
	j *= .125;
	r.x = fract(512.0 * j);
	j *= .125;
	r.y = fract(256.0 * j);
	return r - 0.5;

	//vec3 p3 = fract(vec3(p.xyx) * vec3(.1031, .1030, .0973));
